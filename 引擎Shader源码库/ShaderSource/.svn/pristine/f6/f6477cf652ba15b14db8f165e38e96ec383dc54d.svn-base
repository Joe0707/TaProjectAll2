	<
		default = "0"
		customizable = "1"
	>;

	["是否无敌"]
	eitheror INVINCIBLE_EFFECT;
	macro(INVINCIBLE_EFFECT)
	<
		default = "0"
		customizable = "1"
	>;

	["是否魔免"]
	eitheror IMMUNE_EFFECT;
	macro(IMMUNE_EFFECT)
	<
		default = "0"
		customizable = "1"
	>;

	["是否使用MatCap"]
	eitheror MATCAP_ENABLE;
	macro(MATCAP_ENABLE)
	<
		default = "1"
		customizable = "1"
	>;

	["开启燃烧效果"]
	eitheror BURN_ENABLE;
	macro(BURN_ENABLE)
	<
		customizable = "1"
		default = "0"
	>;

